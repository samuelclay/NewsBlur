{
    "service": {
        "name": "{% if inventory_hostname == 'db-metrics' %}prometheus{% else %}prometheus-staging{% endif %}",
        "id": "{{ inventory_hostname }}-prometheus",
        "tags": [
            "db"
        ],
        "checks": [{
            "id": "prometheus-ping",
            "http": "http://{{ ansible_host }}:9090/metrics",
            "interval": "15s",
            "failures_before_critical": 4
          }],
        "port": 9090
    }
}
