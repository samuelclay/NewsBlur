{
    "service": {
        "name": "{% if inventory_hostname == 'db-metrics' %}grafana{% else %}grafana-staging{% endif %}",
        "id": "{{ inventory_hostname }}-grafana",
        "tags": [
            "db"
        ],
        "checks": [{
            "id": "grafana-ping",
            "http": "http://{{ ansible_host }}:3000/api/health",
            "interval": "15s",
            "failures_before_critical": 4
          }],
        "port": 3000
    }
}
