{
    "service": {
        {% if inventory_hostname.startswith('hdb-') %}
            "name": "grafana-staging",
        {% else %}
            "name": "grafana",
        {% endif %}
        "id": "{{ inventory_hostname }}",
        "tags": [
            "db"
        ],
        "checks": [{
            "id": "grafana-ping",
            "http": "http://{{ ansible_host }}:3000/api/health",
            "interval": "15s",
            "failures_before_critical": 4
          }],
        "port": 3000
    }
}
